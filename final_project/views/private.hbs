<div>
  <div id="leftbar">
    <h1>Welcome {{user.name}}</h1>
    <div id="scrollmenu1">
      <a class="btn" href="/">Home</a>
      <h2>My Profile</h2>
      <a class="btn" href="#">View profile</a>
      <a class="btn" href="#">Edit your profile</a>
    </div>
    <div>
      <h1>Journals</h1>
      {{#each journals}}
      <p>{{name}}</p>
      <a class="btn" href="/my-page/journals/journal-details/{{_id}}" role="button">See More</a>
      {{/each}}
    </div>
    {{#if message}}
    {{message}}
    {{/if}}

    <div id="main">
      <a class="btn" id="addbtn" href="/my-page/create-journal">Add a journal</a>
    </div>
    <a class="btn" href="/logout">Logout</a>
  </div>

</div>